<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#ffffff">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:id="@+id/imageView_CacDienThoai"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_TenDienThoai"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#1229B8"
                android:text="Tên Điện Thoại"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_GiaTienDienThoai"
                android:layout_margin="5dp"
                android:textColor="#FA3939"
                android:text="Giá Điện Thoại"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_MoTaDienThoai"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:text="Mô Tả Điện Thoại"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        
    </LinearLayout>


</androidx.cardview.widget.CardView>




</LinearLayout>